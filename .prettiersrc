{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "proseWrap": "always",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.{html,htm}",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": "*.{js,mjs,jsx}",
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": "*.{ts,tsx}",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "proseWrap": "always"
      }
    },
    {
      "files": "*.svg",
      "options": {
        "parser": "xml"
      }
    }
  ]
}